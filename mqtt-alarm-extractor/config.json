{
  "name": "MQTT Alarm Extractor for Cognite",
  "version": "1.0.9",
  "slug": "mqtt-alarm-extractor",
  "description": "Extract alarm events and frames from MQTT and write to Cognite Data Fusion data model views",
  "url": "https://github.com/tmolbach/mqtt-extractor-ha-addon",
  "arch": ["amd64", "aarch64", "armv7"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "options": {
    "cognite_project": "",
    "cognite_cluster": "az-eastus-1",
    "cognite_client_id": "",
    "cognite_client_secret": "",
    "cognite_token_url": "",
    "cognite_scopes": "https://az-eastus-1.cognitedata.com/.default",
    "mqtt_host": "homeassistant.local",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_qos": 1,
    "instance_space": "ha_instances",
    "data_model_space": "sp_enterprise_schema_space",
    "data_model_version": "v1",
    "alarm_event_topic": "events/alarms/log",
    "alarm_event_view": "haAlarmEvent",
    "alarm_frame_topic": "events/alarms/frame",
    "alarm_frame_view": "haAlarmFrame",
    "log_level": "INFO"
  },
  "schema": {
    "cognite_project": "str",
    "cognite_cluster": "str?",
    "cognite_client_id": "str",
    "cognite_client_secret": "str",
    "cognite_token_url": "str",
    "cognite_scopes": "str?",
    "mqtt_host": "str?",
    "mqtt_port": "int?",
    "mqtt_username": "str?",
    "mqtt_password": "str?",
      "mqtt_qos": "int(0,2)?",
      "instance_space": "str?",
      "data_model_space": "str?",
      "data_model_version": "str?",
    "alarm_event_topic": "str?",
    "alarm_event_view": "str?",
    "alarm_frame_topic": "str?",
    "alarm_frame_view": "str?",
    "log_level": "match(^(DEBUG|INFO|WARNING|ERROR)$)?"
  },
  "ports": {},
  "ports_description": {},
  "host_network": false
}

